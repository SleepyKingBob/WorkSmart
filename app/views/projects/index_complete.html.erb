<div class="container show-form w-75 py-3">
  <h1>All Finished Projects</h1>

  <ul>
    <% @projects.each do |project| %>
      <div class="border-project w-100">
        <li class="d-flex w-100 justify-content-center">
          <p class="text-7 my-4 w-25"><%= project.name %> </p>
          <div class="p-2 align-self-center d-flex justify-content-around w-25">
            <%= link_to "View",  project_path(project.id), class:"button-1 my-auto"%>
            <%= link_to "Delete",
                        project_path(project.id),
                        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                        class:"my-auto button-2"
            %>
          </div>
        </li>
      </div>
    <% end %>
  </ul>
  <%= link_to "View Incomplete Projects", projects_path, class:"button-1 my-auto" %>
</div>
