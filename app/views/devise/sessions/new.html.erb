
<div class="wrapper-login">
    <div class="form-login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="sign-text text-1  text-center">Please login</h2>
           <i class="fa fa-user-circle"></i>
          <%= f.text_field :email, placeholder: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, class:"form-control" %>

          <i class="fa fa-key"></i>
          <%= f.password_field :password, placeholder: "Password",
                      required: true,
                      input_html: { autocomplete: "current-password" }, class:"form-control" %>

            <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.label "Remember me" %>
          <li class="d-flex"><%= f.submit "Log in" , class:" d-flex justify-content-center button-login"%> </li>


        <!--Forgot Password button-->
      <br>
      <div class="btn  frgt-pass" >
           <%= link_to "Forgot password?", new_password_path(resource_name)%>
      </div>
      <button class="btn submits sign-up">
          <!--Sign Up font icon -->
        <i class="fa fa-user-plus" aria-hidden="true"></i>
        <%= link_to "Sign Up", new_registration_path(resource_name) %>
      </button>
   <% end %>
   </div>
</div>

