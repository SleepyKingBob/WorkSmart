
<div class="form-box ">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <ul>
    <li><h2 class="text-1 center-text">Forgot your password?</h2></li>
    <br/>
    <li><%= f.text_field :email, placeholder: "Email", class:"fields-1 w-100",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %></li>
    <br/>
    <li><%= f.submit "Send me reset password instructions", class:"button-1 border-0 w-100 d-flex justify-content-center" %></li>
    <br/>
    <li class="center-text"><%= render "devise/shared/links" %></li>
    </ul>
  <% end %>


</div>
