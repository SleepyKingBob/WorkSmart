<div class="container">
  <h1>Add a task to <%= @project.name %></h1>

  <ul>
    <% unless @project.tasks == []  %>
      <% @project.tasks.each do |task| %>
      <li><%= task.name %></li>
      <% end %>
    <% end %>
  </ul>

  <%= render "form", project: @project, task: @task %>

  <%= link_to "Back to dashboard", dashboard_path %>
</div>
